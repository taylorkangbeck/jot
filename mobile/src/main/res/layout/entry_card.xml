<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/cardEdgePadding"
    android:paddingRight="@dimen/cardEdgePadding"
    android:paddingTop="@dimen/cardEdgePadding"
    android:alpha="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/entryCardContentPadding"
        android:background="@color/entryCardBackground"
        android:id="@+id/cardContent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:alpha="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date"
            android:id="@+id/entryDate"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/entryBody"
            android:layout_row="1"
            android:layout_column="0" />

    </GridLayout>

    <View
        android:layout_height="fill_parent"
        android:id="@+id/sentGrad"
        android:layout_width="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        android:foregroundGravity="bottom|right|top"
        android:alpha="1" />

</RelativeLayout>