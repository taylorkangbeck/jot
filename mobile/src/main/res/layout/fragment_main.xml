<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceholderFragment"
    android:background="@color/mainBackground"
    android:id="@+id/mainfrag">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/chartLabelView"
        android:background="@color/ChartDarkGrey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/leftDateLabel"
            android:layout_alignParentStart="true"
            android:textColor="@color/entryCardBackground" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/centerDateLabel"
            android:layout_centerHorizontal="true"
            android:textColor="@color/entryCardBackground"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/rightDateLabel"
            android:layout_alignParentEnd="true"
            android:textColor="@color/entryCardBackground"/>
    </RelativeLayout>

    <com.taylorandtucker.jot.ui.SentimentGraphFragment
        android:id="@+id/chart"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/chartLabelView" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entriesFeed"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_below="@+id/chart"
        android:layout_alignParentBottom="true" >
        <!--
                android:layout_alignParentBottom="true"
                android:focusableInTouchMode="true"
                android:focusable="true" -->
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textEntryLayout"
        android:visibility="invisible"
        android:gravity="bottom"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true"
        android:padding="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:gravity="bottom"
            android:id="@+id/textEntryLayoutInner"
            android:background="@color/ColorPrimary"
            android:padding="0dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textEntry"
                android:layout_toLeftOf="@+id/submitButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="false"
                android:inputType="text" />


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/submitButton"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:onClick="onSubmit"
                android:layout_alignBottom="@+id/textEntry" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="false"
            android:weightSum="1"
            android:layout_below="@+id/textEntryLayoutInner"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:padding="0dp"
            android:background="@color/ColorPrimary">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text=""
                android:id="@+id/addNegEmoji"
                android:layout_weight=".5"
                android:layout_gravity="center_horizontal|bottom"
                android:padding="0dp"
                android:textSize="25sp"  />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/addPosEmoji"
                android:layout_weight=".5"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp" />

        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/invisFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textEntryLayout"
        android:visibility="invisible"></FrameLayout>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_new_entry"
        android:background="@drawable/circle"
        android:id="@+id/fab"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fabMargin" />

</RelativeLayout>